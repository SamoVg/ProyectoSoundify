@model IEnumerable<ProyectoSoundify.Models.dbModels.Anuncio>
@{
    ViewData["Title"] = "Log in";
    Layout = "_LayoutAdministrador";
}

<h1>Anuncios</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>


<table id="TableIndexAnuncio">
    <thead>
        <tr>
            <th>
                Titulo
            </th>
            <th>
                Imagen
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TituloAnuncio)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.RutaImgAnuncio)" alt="Imagen no Encontrada">
                
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAnuncio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAnuncio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAnuncio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
        $('#TableIndexAnuncio').DataTable();
    
</script>